<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Registration Form</title>

    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">
</head>
<body>


    <div class="row" style="display:flex; flex-direction: row; align-items: center;">

        <div class="container mt-4">
        <div class="col-md-5 mb-5">
            <!-- Login Form -->
            <div class="container"> 
                <h3>Login</h3>
                <form action="/login" method="POST">
                       <div class="mb-3">
                        <label for="loginEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="loginEmail" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="loginPassword" name="password" required>
                    </div>
                    <button type="submit" value="Register" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>    


        <div class="col-md-5 mb-4">
            <!-- Registration Form -->
            <div class="container">
                <h3>Register</h3>
                <form action="/register" method="POST">
                      <div class="mb-3">
                        <label for="registerEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="registerEmail" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="registerPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="registerPassword" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="registerPasswordConfirm" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="registerPasswordConfirm" name="passwordConfirm" required>
                    </div>
                    <button type="submit" value="Register" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>

</div>
</div>

<!-- Bootstrap 5 JS (with Popper.js for dropdowns) CDN -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>
