<style>
  /* For alert banner */
  #alert-banner-top .container-fluid {
    width: 100vw;
    padding-top: 0.8em;
    padding-bottom: 1.2em;
    z-index: -1;
}

.orange-banner {
    background-color: #ffb500;
    width: 100vw;
    min-height: max-content;
    justify-content: center;
}

.orange-banner h2 {
    margin-left: 8%;
    margin-right: 5%;
    /* width: 100%; */
    font-size: 1.4em;
    line-height: 2.8rem;
    font-weight: 700;
    margin-top: 1.5rem;
}
.orange-banner p {
    margin-left: 8%;
    margin-right: 4%;
}


/* For the main container */
.container4 {
    padding-left: 5%;
    padding-right: 3%;
    margin-top: 20px;
    margin-bottom: 20px;
}

.blockhead {
    display: block;
    margin-left: 3%;
}

.wdot-dkgreen {
    font-weight: bold;
}

.col-lg-9.col-md-12.col-sm-12 {
    display: block;
}

.togglerow {
    justify-content: space-between;
}

.mapcontainer {
    width: 100%;
    overflow: hidden;
}

#map1 {
    display: block;
    height: 775px;
    min-width: 101%;
    max-width: 106%;
}

#map2 {
    display: none;
}

#map2 p {
    font-size: 18px;
    font-weight: 400;
}

.col-lg-3.vanishing.pt-5.mt-5 div {
    margin-left: 25px;
}

.text-left.wdot-dkgreen {
    font-weight: bold;
    font-size: 2rem;
}

.closure-item {
    list-style-type: none;
}

.icon-box img.icon-img {
    display: inline-block;
}

/* Hide by default, you might want to display it based on your logic */
.closure-item[style="display: none;"] {
    display: none;
}


</style>


</head>

<body>
  <a href="#main-content" class="sr-only">Skip to main content</a>
  <%- include('partials/header') %>
  <main id="main-content">
      <div id="alert-banner-top" class="container-fluid">
          <div class="row">
              <div class="orange-banner" aria-live="polite">
                  <!-- <% if (project.bannerContent==='yes'){ %>
                      <h2 class="mt-2"><%= project.activityName %></h2>
                      <p><a href="/projects/<%=project._id %>" aria-label="View details for <%= project.activityName %>">View Details</a></p>
                  <% } %> -->
                  <% if (project) { %>
                  
                        <h2 class="mt-3">ALERT: <%= project.activityName %></h2>
                        <p><a href="/projects/<%= project._id %>" aria-label="View details for <%= project.activityName %>">View Details</a></p>
                    </div>
                <% } %>
              </div>
          </div>
      </div>
      <section class="container4">
          <div class="container-fluid">
              <div class="row">
                  <div class="blockhead">
                      <h1 class="wdot-dkgreen">SR 520 Construction Corner</h1>
                      <p><strong>The go-to source for information on SR 520 construction and closures.</strong></p>
                  </div>
              </div>
              <div id="construction-map">
                  <div class="row">
                      <div class="col-lg-9 col-md-12 col-sm-12">
                          <div class="togglerow">
                              <button id="map1Button" class="parallelogram-link map-tab" role="tab">SR 520 Construction Map</button>
                              <button id="map2Button" class="parallelogram-link map-tab" role="tab">WSDOT Travel Map</button>
                          </div>
                          <div class="mapcontainer">
                              <div id="map1">
                                  <%- include('partials/_mapPartial.ejs') %>
                              </div>
                              <div id="map2" class="d-none">
                                  <iframe title="WSDOT Travel Map" src="https://wsdot.com/Travel/Real-time/Map/?featuretype=camera&featureid=9648"></iframe>
                              </div>
                          </div>
                          <p><em>Note: This tool is presented for planning purposes only. Construction work is dependent on weather and other factors, and activities are subject to change. </em></p>
                      </div>
                      <aside class="col-lg-3 vanishing pt-5 mt-5">
                          <div>
                              <h2 class="text-left wdot-dkgreen">Closures today</h2>
                              <ul>
                                  <% if (typeof currentClosures !=='undefined' && currentClosures){ %>
                                      <% currentClosures.forEach(closure=>{ %>
                                          <li class="closure-item">
                                              <span class="icon-box">
                                                  <img src="https://sr520construction.blob.core.windows.net/520-uploads/whitedash-onred.png" class="icon-img" alt="">
                                              </span>&nbsp;&nbsp;
                                              <a href="/projects/<%=closure._id %>"><%=closure.activityName %></a>
                                          </li>
                                      <% }); %>
                                  <% } %>
                              </ul>
                              <h2 class="text-left wdot-dkgreen">Upcoming closures</h2>
                              <ul>
                                  <% if (typeof upcomingClosures !=='undefined' && upcomingClosures && upcomingClosures.length >0){ %>
                                      <% upcomingClosures.forEach(closure=>{ %>
                                          <li class="closure-item">
                                              <span class="icon-box">
                                                  <img src="https://sr520construction.blob.core.windows.net/520-uploads/whitedash-onred.png" class="icon-img" alt="">
                                              </span>
                                              <a href="/projects/<%=closure._id %>"><%=closure.activityName %></a>
                                          </li>
                                      <% }); %>
                                  <% } else { %>
                                      <li class="closure-item">No upcoming closures</li>
                                  <% } %>
                              </ul>
                          </div>
                      </aside>
                  </div>
              </div>
          </div>
      </section>
  </main>
  <%- include('partials/horizontal-cards') %>
  <%- include('partials/footer') %>
</body>



